<Window x:Class="RecursosIEstils.wndRecursosDeLaApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecursosIEstils" xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="wndRecursosDeLaApp" Height="450" Width="800">
    <Window.Resources>
        <FontFamily x:Key="TitolFontFamily">Fonts/#Glorify DEMO</FontFamily>
        <FontWeight x:Key="TitolFontWeight">Bold</FontWeight>
        <system:Double x:Key="TitolFontSize">34</system:Double>
        
    </Window.Resources>
    <StackPanel Margin="5">
        <Button Padding="5"
            FontWeight="Bold" FontSize="14" Margin="5">
            Un botó amb recurs de la finestra
        </Button>

        <Button Padding="5" Margin="5"
       FontSize="{StaticResource TitolFontSize}" FontWeight="{StaticResource TitolFontWeight}" FontFamily="{StaticResource TitolFontFamily}">
            Canvia el pinzell
        </Button>
        <Button Padding="5" Margin="5"
       FontWeight="Bold" FontSize="14"
                Background="{StaticResource PinzellContent}">
            Un botó amb recurs de la App
        </Button>
    </StackPanel>
</Window>
