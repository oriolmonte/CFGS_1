<Window x:Class="Puzzle.TaulerJoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Puzzle"
        mc:Ignorable="d"
        Title="TaulerJoc" Height="450" Width="800" MouseDown="Window_MouseDown">
    <DockPanel x:Name="dckMain">
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="sbiCrono"></StatusBarItem>
            <Separator></Separator>
            <StatusBarItem x:Name="sbiMoves"></StatusBarItem>
            <Separator></Separator>
            <StatusBarItem x:Name="sbiProgress"></StatusBarItem>
        </StatusBar>
        <Button DockPanel.Dock="Top" x:Name="btnStart" Click="btnStart_Click">Start</Button>
    </DockPanel>
</Window>
