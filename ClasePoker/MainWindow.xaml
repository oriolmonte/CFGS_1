<Window x:Class="ClasePoker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClasePoker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left"
                    Orientation="Vertical">
            <Button Name="btnReverteix" Click="btnReverteix_Click" Content="Reverteix"></Button>
            <Button Name="btnTria" Click="btnTria_Click" Content="Tria"></Button>
        </StackPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" Name="stkMa" Height="200">
                <Image Source="{StaticResource Dors07}"></Image>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" DockPanel.Dock="Top">

            <StackPanel Name="stkBaralla" Orientation="Horizontal" DockPanel.Dock="Bottom" Height="200">
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
